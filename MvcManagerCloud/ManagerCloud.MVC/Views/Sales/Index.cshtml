@model ManagerCloud.MVC.ViewModels.SalesListViewModel
 
@{
    ViewBag.Title = "Sales";
}
 
<h2>Sales</h2>
 
<form method="get">
    <div class="form-inline">
        <label class="control-label">SaleSum: </label>
        @Html.DropDownList("saleSum", Model.SaleSum as SelectList,
            htmlAttributes: new { @class = "form-control" })
 
        <label class="control-label">Items: </label>
        @Html.DropDownList("items", Model.Items as SelectList,
            htmlAttributes: new { @class = "form-control" })
 
        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
</form>
 
<table>
    <tr>
        <th>
            <p>Client first name</p>
        </th>
        <th>
            <p>Client last name</p>
        </th>
        <th>
            <p>Item name</p>
        </th>
        <th>
            <p>Data source</p>
        </th>
        <th>
            <p>Date</p>
        </th>
        <th>
            <p>Cost</p>
        </th>
        <th></th>
    </tr>
 
    @foreach (var item in Model.Sales)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataSource.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SaleSum)
        </td>
    </tr>
    }
</table>